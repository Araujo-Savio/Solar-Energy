@{
    ViewData["Title"] = "Energia Solar Sustentável";
}

<!-- Hero Section -->
<section class="hero-section bg-solar-gradient text-white">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-3 fw-bold mb-4">
                        <i class="fas fa-solar-panel text-solar-orange me-3"></i>
                        SOLAR ENERGY
                    </h1>
                    <p class="lead mb-4 fs-4">Energia limpa para um futuro sustentável</p>
                    
                    <div class="features-list mb-4">
                        <div class="feature-item d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-solar-orange me-3 fs-5"></i>
                            <span class="fs-5">Reduza sua conta de energia em até 95%</span>
                        </div>
                        <div class="feature-item d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-solar-orange me-3 fs-5"></i>
                            <span class="fs-5">Contribua para um planeta mais verde</span>
                        </div>
                        <div class="feature-item d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-solar-orange me-3 fs-5"></i>
                            <span class="fs-5">Valorize seu imóvel</span>
                        </div>
                        <div class="feature-item d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-solar-orange me-3 fs-5"></i>
                            <span class="fs-5">Independência energética</span>
                        </div>
                        <div class="feature-item d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle text-solar-orange me-3 fs-5"></i>
                            <span class="fs-5">Retorno do investimento garantido</span>
                        </div>
                    </div>
                    
                    <div class="hero-buttons">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Home" asp-action="Dashboard" class="btn btn-solar-orange btn-lg me-3 px-4 py-3">
                                <i class="fas fa-tachometer-alt me-2"></i>Acessar Dashboard
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Auth" asp-action="Register" class="btn btn-solar-orange btn-lg me-3 px-4 py-3">
                                <i class="fas fa-user-plus me-2"></i>Começar Agora
                            </a>
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-light btn-lg px-4 py-3">
                                <i class="fas fa-sign-in-alt me-2"></i>Fazer Login
                            </a>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image">
                    <i class="fas fa-solar-panel fa-10x text-solar-orange opacity-75"></i>
